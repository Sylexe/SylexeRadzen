import random
import socket

s = socket.socket()
host = "127.0.0.1"
port = 15555
s.connect((host, port))
reponse = s.recv(512).decode("utf8")

while(reponse.find("Connection closed") == -1):
    entree = random.choice(["Pierre", "Papier", "Ciseaux"])
    s.send(entree.encode("utf8"))
    reponse = s.recv(512).decode("utf8")
    print(reponse)
s.close()